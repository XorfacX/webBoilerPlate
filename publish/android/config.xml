    <preference name="Fullscreen" value="true" />  <!-- be sure it's full screen -->
    <!-- <preference name="Orientation" value="landscape" /> --> <!-- force landscape -->
    <preference name="HideKeyboardFormAccessoryBar" value="true"/> <!-- Android/blackberry, hide keyboard input nav bar-->

    <icon src="../icons/default.png" /> <!-- default icon (we start from Cordova project) -->

    <!-- Android specifics -->
    <platform name="android">
        <!-- icons (we start from Cordova project) -->
        <icon src="../icons/ldpi.png" density="ldpi" />
        <icon src="../icons/mdpi.png" density="mdpi" />
        <icon src="../icons/hdpi.png" density="hdpi" />
        <icon src="../icons/xhdpi.png" density="xhdpi" />

        <!-- splashscreens (we start from Cordova project) -->
        <splash src="../splashScreens/portrait-hdpi.png" density="port-hdpi"/>
        <splash src="../splashScreens/portrait-ldpi.png" density="port-ldpi"/>
        <splash src="../splashScreens/portrait-mdpi.png" density="port-mdpi"/>
        <splash src="../splashScreens/portrait-xhdpi.png" density="port-xhdpi"/>
    </platform>
    <!-- END Android specifics -->

